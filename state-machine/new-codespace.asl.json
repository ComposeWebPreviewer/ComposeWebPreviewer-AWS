{
	"StartAt": "Is Authorization header present",
	"States": {
		"Is Authorization header present": {
			"Type": "Choice",
			"Choices": [
				{
					"Variable": "$.headers.Authroization",
					"IsPresent": true,
					"Next": "GetUser"
				}
			],
			"Default": "Unauthorized"
		},
		"GetUser": {
			"Type": "Task",
			"Parameters": {
				"AccessToken.$": "$.header.Authorization"
			},
			"Resource": "arn:aws:states:::aws-sdk:cognitoidentityprovider:getUser",
			"Next": "Generate UUID",
			"Catch": [
				{
					"ErrorEquals": [
						"States.ALL"
					],
					"Next": "Unauthorized"
				}
			]
		},
		"Unauthorized": {
			"Type": "Pass",
			"Parameters": {
				"status": 401
			},
			"End": true
		},
		"Generate UUID": {
			"Type": "Pass",
			"Next": "Create new Codespace",
			"Parameters": {
				"uuid.$": "States.UUID()"
			}
		},
		"Create new Codespace": {
			"Type": "Task",
			"Resource": "arn:aws:states:::dynamodb:putItem",
			"Parameters": {
				"TableName": "${CodespaceDBTableName}",
				"Item": {
					"id": {
						"S.$": "$.uuid"
					},
					"sub": {
						"S.$": "$.UserAttributes[?(@.Name == 'sub')][0].Value"
					}
				}
			},
			"Next": "Success"
		},
		"Success": {
			"Type": "Pass",
			"End": true,
			"Parameters": {
				"status": 200
			}
		}
	}
}