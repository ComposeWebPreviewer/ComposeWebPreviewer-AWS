{
	"StartAt": "Choice",
	"States": {
		"Choice": {
			"Type": "Choice",
			"Choices": [
				{
					"Variable": "$.body.username",
					"IsPresent": true,
					"Next": "ResendConfirmationCode"
				}
			],
			"Default": "Pass"
		},
		"Pass": {
			"Type": "Pass",
			"End": true
		},
		"ResendConfirmationCode": {
			"Type": "Task",
			"Parameters": {
				"ClientId": "${UserPoolClientId}",
				"Username": "$.body.username"
			},
			"Resource": "arn:aws:states:::aws-sdk:cognitoidentityprovider:resendConfirmationCode",
			"End": true
		}
	}
}